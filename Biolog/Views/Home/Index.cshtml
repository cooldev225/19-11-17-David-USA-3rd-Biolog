
@model Biolog.Models.Dashboard
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/dashboard.css" rel="stylesheet" />
<style>
    .tile-green {
        background: #ffffff;
    }
    .tile-green,.tile-inner {
        color: #495057;
        border:unset;
        -webkit-box-shadow: 0 12px 15px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19) !important;
        box-shadow: 0 12px 15px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19) !important;
    }
    .tile:hover .tile-inner {
        border: unset;
        color:black;
    }
    .tile {
        border: unset;
    }
    .powerbireports .tile{
         border-left: 4px #ff6a00 solid;
    }
    
    .reports .tile,.reports .tile:hover{
         border-left: 4px #4d73ff solid;
    }
    .tile-green .text-white {
        color: #495057!important;
    }
    .tile:hover ,.tile-inner:hover,.tile:active ,.tile-inner:active{
        border: unset;
        transition: all 0.3s;
        cursor: pointer;
        color: #000000;
    }
    .d-inline{
        color: black;
    }
    .tile-inner .flex-fill .pl-2{
        color: #ff0000d9;
    }

    .powerbireports .tile:hover{
        background: unset;
         background-image: linear-gradient(to right, #ff6a00 , #ffffff)!important;
    }
    .reports .tile:hover{
        background: unset;
         background-image: linear-gradient(to right, #4d73ff , #ffffff)!important;
    }
</style>
@if (Model.KpiCount > 0)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col mt-3 f-110">
                <span class="font-weight-bold">KPIS </span><span>(@Model.KpiModel.Count)</span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                @for (int i = 0; i < Model.KpiModel.Count; i++)
                {
                    string percentT = string.Empty;
                    if(@Model.KpiModel[i].Name.Contains("UC Health"))
                    {
                        percentT = "(-71%)";
                    }
                    else if (@Model.KpiModel[i].Name.Contains("Units Expiring"))
                    {
                        percentT = "";
                    }
                    else if (@Model.KpiModel[i].Name.Contains("Hosp Unit"))
                    {
                        percentT = "(-80%)";
                    }
                    if (Model.KpiModel[i].Status.Contains("-1.0"))
                    {
                        <div class="tile tile-red float-left" data-toggle="tooltip" title="Status: Bad">
                            <button class="ellip bg-transparent border-0 p-0 text-white no-outline">
                                <span class="pl-2 pr-2">
                                    <i class="fa fa-ellipsis-h"></i>
                                </span>
                            </button>
                            <div class="tile-inner pl-2 d-flex flex-column">
                                <div class="header d-flex">
                                    @Model.KpiModel[i].Name
                                </div>
                                <div class="d-flex flex-fill align-items-center">
                                    <div class="flex-fill">
                                        <h3 class="d-inline m-0">@Model.KpiModel[i].Value</h3><span class="pl-2">@percentT</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (Model.KpiModel[i].Status.Contains("0.0"))
                    {
                        <div class="tile tile-yellow float-left" data-toggle="tooltip" title="Status: Neutral">
                            <button class="ellip bg-transparent border-0 p-0 text-white no-outline">
                                <span class="pl-2 pr-2">
                                    <i class="fa fa-ellipsis-h"></i>
                                </span>
                            </button>
                            <div class="tile-inner pl-2 d-flex flex-column">
                                <div class="header d-flex">
                                    @Model.KpiModel[i].Name
                                </div>
                                <div class="d-flex flex-fill align-items-center">
                                    <div class="flex-fill">
                                        <h3 class="d-inline m-0">@Model.KpiModel[i].Value</h3><span class="pl-2">(-56%)</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                    else if (Model.KpiModel[i].Status.Contains("1.0"))
                    {

                        <div class="tile tile-green float-left" data-toggle="tooltip" title="Status: Good">
                            <button class="ellip bg-transparent border-0 p-0 text-white no-outline">
                                <span class="pl-2 pr-2">
                                    <i class="fa fa-ellipsis-h"></i>
                                </span>
                            </button>
                            <div class="tile-inner pl-2 d-flex flex-column">
                                <div class="header d-flex">
                                    @Model.KpiModel[i].Name
                                </div>
                                <div class="d-flex flex-fill align-items-center">
                                    <div class="flex-fill">
                                        <h3 class="d-inline m-0">@Model.KpiModel[i].Value</h3><span class="pl-2">(-34%)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }



            </div>
        </div>
    </div>
}
<!-- For power Bi reports -->
@if (Model.PowerBiCount > 0)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col mt-4 f-110">
                <span class="font-weight-bold">POWER BI REPORTS </span><span>(@Model.PowerBiCount)</span>
            </div>
        </div>
        <div class="row powerbireports">
            <div class="col">
                @for (int i = 0; i < Model.PowerBiCount; i++)
                {
                    <div class="tile float-left">
                        <button class="ellip bg-transparent border-0 p-0 no-outline">
                            <span class="pl-2 pr-2">
                                <i class="fa fa-ellipsis-h"></i>
                            </span>
                        </button>
                        <div class="tile-inner pl-2 d-flex flex-column">
                            <div class="d-flex flex-fill align-items-center justify-content-center">
                                @if (@Model.PowerBiModelList[i].Name.Contains("Platelet"))
                                {
                                    <a href="@Url.Action("Platelet","Home")" class="report-link"> <img src="images/powerbi_icon.svg" width="38" class="pr-3"> @Model.PowerBiModelList[i].Name</a>
                                }
                                else
                                {

                                    <a> <img src="images/powerbi_icon.svg" width="38" class="pr-3"> @Model.PowerBiModelList[i].Name</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@if (Model.ReportCount > 0)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col mt-4 f-110">
                <span class="font-weight-bold">PAGINATED REPORTS </span><span>(@Model.ReportCount)</span>
            </div>
        </div>
        <div class="row reports">
            <div class="col">
                @for (int i = 0; i < Model.ReportCount; i++)
                {
                    <!-- This is single tile, use loop to generate the same-->
                    <div class="tile float-left">
                        <button class="ellip bg-transparent border-0 p-0 no-outline">
                            <span class="pl-2 pr-2">
                                <i class="fa fa-ellipsis-h"></i>
                            </span>
                        </button>
                        <div class="tile-inner pl-2 d-flex flex-column">
                            <div class="d-flex flex-fill align-items-center justify-content-center">

                                @if (@Model.ReportModelList[i].Name.Contains("Blood Unit"))
                                {
                                    <i class="fa fa-2x fa-file-text-o pr-3" style="margin-left:-38px;"></i>
                                    <a href="@Url.Action("Bloodunit","Home")" class="report-link">@Model.ReportModelList[i].Name</a>
                                }
                                else if (@Model.ReportModelList[i].Name.Contains("Data Summary"))
                                {
                                    <i class="fa fa-2x fa-file-text-o pr-3"></i>
                                    <a href="@Url.Action("DataSummary","Home")" class="report-link">@Model.ReportModelList[i].Name</a>
                                }
                                else if (@Model.ReportModelList[i].Name.Contains("Expiration Detail"))
                                {
                                    <i class="fa fa-2x fa-file-text-o pr-3"></i>
                                    <a href="@Url.Action("ExpiringUnit","Home")" class="report-link">@Model.ReportModelList[i].Name</a>
                                }
                                else if (@Model.ReportModelList[i].Name.Contains("RDIF"))
                                {
                                    <i class="fa fa-2x fa-file-text-o pr-3"></i>
                                    <a href="@Url.Action("RFID","Home")" class="report-link">@Model.ReportModelList[i].Name</a>
                                }
								 else if (@Model.ReportModelList[i].Name.Contains("PlateletProfile"))
                                {
                                    <i class="fa fa-2x fa-file-text-o pr-3"></i>
                                    <a href="@Url.Action("PlateletProfile","Home")" class="report-link">@Model.ReportModelList[i].Name</a>
                                }
                                else
                                {
                                    <i class="fa fa-2x fa-file-text-o pr-3"></i>
                                    <a> @Model.ReportModelList[i].Name</a>
                                }
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}

